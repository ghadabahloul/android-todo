<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="50dp"
        android:text="Change your Password"
        android:textColor="#000000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center" />

    <EditText
        android:id="@+id/newpass"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:hint="New Password"
        android:password="true"
         android:gravity="center"
        android:textStyle="bold"
        android:textSize="15dp"
     
        android:textColor="#000000" />

    <Button
        android:id="@+id/btcancel"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btchangepass"
        android:layout_toRightOf="@+id/btchangepass"
        android:background="@drawable/buttonbleu"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="Cancel"
        android:textColor="#ffffff"
          android:layout_marginBottom="40dp"
          android:layout_marginLeft="5dp"
        android:textSize="15dip"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alertpass"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btchangepass"
        android:textColor="#000000" />

    <Button
        android:id="@+id/btchangepass"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/newpass"
        android:layout_marginTop="53dp"
        android:background="@drawable/buttonbleu"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:text="Change Password"
        android:textColor="#ffffff"
        android:textSize="15dip"
        android:textStyle="bold" />

</RelativeLayout>