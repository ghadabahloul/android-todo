<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
     <item android:state_pressed="true" >
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#557fc4" />
             <gradient  android:angle="-90"  android:startColor="#557fc4" android:endColor="#557fc4"  />           
         </shape>
     </item>
    <item android:state_focused="true">
         <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#4a78c3" />
             <solid  android:color="#557fc4"/>      
         </shape>
     </item> 
    <item >
        <shape android:shape="rectangle"  >
             <corners android:radius="3dip" />
             <stroke android:width="1dip" android:color="#4a78c3" />
             <gradient  android:angle="-90"  android:startColor="#4a78c3" android:endColor="#4a78c3" />           
         </shape>
     </item>
</selector>